<UserControl x:Class="kaleidot725.View.AlbumTab" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:kaleidot725.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <UserControl.DataContext>
        <local:AlbumTabViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Name="forwardButton" Grid.Row="0" Content="←"  Background="Transparent" HorizontalAlignment="Left" Click="forwardButton_Click"/>
        <Frame Grid.Row="1" NavigationUIVisibility="Hidden" Name="myFrame" DataContext="{Binding}"
               Loaded="myFrame_Loaded" Navigated="myFrame_Navigated" MouseLeftButtonUp="myFrame_MouseDoubleClick"/>
    </Grid>
</UserControl>
